<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/capture" >

    <EditText
        android:id="@+id/editsetItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editsetItemCategory"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/editsetItemCategory"
        android:layout_below="@+id/editsetItemCategory"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="#000" />

    <EditText
        android:id="@+id/editsetItemCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editsetItemAmount"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/editsetItemAmount"
        android:layout_below="@+id/editsetItemAmount"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000" />

    <EditText
        android:id="@+id/editsetItemDate"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editsetItemDescription"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/editsetItemDescription"
        android:layout_below="@+id/editsetItemDescription"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="date"
        android:textColor="#000" />

    <EditText
        android:id="@+id/editsetItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000" >
    
    	<requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editsetItemCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editsetItemName"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/editsetItemName"
        android:layout_below="@+id/editsetItemName"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textsetExpenseItemHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/Edit_Item"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000" />

    <EditText
        android:id="@+id/editsetItemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/editsetItemDate"
        android:layout_below="@+id/editsetItemDate"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="#000" />

    <Button
        android:id="@+id/buttonsavesetItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:text="@string/save" />    

</RelativeLayout>
