<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.cs.travelapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />
	
	<uses-permission 
	    android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ca.ualberta.cs.travelapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.ualberta.cs.travelapp.AddClaimActivity"
            android:label="@string/title_activity_add_claim" >
            <intent-filter>
                <action android:name="cs.ualberta.ca.AddClaimActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.ualberta.cs.travelapp.AddItemActivity"
            android:label="@string/title_activity_add_item" >
            <intent-filter>
                <action android:name="cs.ualberta.ca.AddItemActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.ualberta.cs.travelapp.ItemViewActivity"
            android:label="@string/title_activity_item_view" >
            <intent-filter>
                <action android:name="cs.ualberta.ca.ItemViewActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.ualberta.cs.travelapp.ExpenseITemActivity"
            android:label="@string/title_activity_expense_item" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.travelapp.ExpenseItemActivity"
            android:label="@string/title_activity_expense_item" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.travelapp.EditClaimActivity"
            android:label="@string/title_activity_edit_claim" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.travelapp.EditItemActivity"
            android:label="@string/title_activity_edit_item" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.travelapp.EmailActivity"
            android:label="@string/title_activity_email" >
        </activity>
    </application>

</manifest>
