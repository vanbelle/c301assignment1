<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <EditText
        android:id="@+id/EnterDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EnterClaimName"
        android:layout_below="@+id/EnterClaimName"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Enter Description"
        android:textColor="#ffffffff" />

    <EditText
        android:id="@+id/EnterStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EnterClaimName"
        android:layout_below="@+id/EnterDescription"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="date"
        android:text="Enter Start Date"
        android:textColor="#ffffffff" />

    <EditText
        android:id="@+id/EnterEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EnterStartDate"
        android:layout_below="@+id/EnterStartDate"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="date"
        android:text="Enter End Date"
        android:textColor="#ffffffff" />

    <EditText
        android:id="@+id/editEnterItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EnterEndDate"
        android:layout_below="@+id/EnterEndDate"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:text="Enter Status"
        android:textColor="#ffffffff" />

    <EditText
        android:id="@+id/EnterClaimName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:text="Enter ClaimName"
        android:textColor="#ffffffff" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textNewCLaimHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="New Claim"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff" />

</RelativeLayout>
